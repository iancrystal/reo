<div class="reo-form">
    <% form_tag do %>
        <fieldset>
            <legend>Enter your email address</legend>
            <div>
              <label for="email">Email:</label>
              <%= text_field_tag :email1, params[:email1] %>
            </div>
            <div>
                <%= submit_tag "Sign-up" %>
            </div>
        </fieldset>
    <% end %>
</div>
